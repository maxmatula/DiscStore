@model List<DiscStore.Infrastructure.ViewModels.Category.CategoryViewModel>

@if (Model == null || Model.Count.Equals(0))
{
    <p>Brak kategorii</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Opis</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model)
            {
                <tr>

                    <td>
                        <a href="@Url.Action("Details", "Category", new { categoryId = cat.CategoryID})">
                            @cat.Name
                        </a>
                    </td>
                    <td>@cat.Description</td>

                </tr>
            }
        </tbody>

    </table>

}
